{
  "mop": [
    {
      "comment": "Set env var MMRS",
      "env_var": {
        "name": "MMRS",
        "value": "centos*"
      },
      "command": "ansible",
      "arguments": {
        "pattern": "all",
        "inventory": "hosts",
        "limit": "$MMRS",
        "module": "shell",
        "args": "ls -l /etc | grep group"
      }
    }
  ]
}