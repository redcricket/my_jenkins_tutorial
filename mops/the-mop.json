{
  "mop": [
    {
      "comment": "Set env var MMRS",
      "env_var": [
        { "name": "MMRS", "value": "centos*" },
        { "name": "INV", "value": "hosts" }
      ],
      "command": "ansible",
      "arguments": {
        "pattern": "all",
        "inventory": "$INV",
        "limit": "$MMRS",
        "module": "shell",
        "args": "ls -l /etc | grep group"
      }
    }
  ]
}