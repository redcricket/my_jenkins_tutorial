pipeline {
    agent {
        docker {
            image 'hashicorp/terraform:light'
            args '-i --entrypoint='
        }
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World from Github.'
                echo "Hello ${params.apply_or_destroy}"
            }
        }
        stage('Test') {
            steps {
                    script {
                        new File("the-mop").eachLine { line ->
                            println line
                            // Define Variable
                            def USER_INPUT = input(
                                message: 'User input required - apply or destroy?',
                                parameters: [
                                    [$class: 'ChoiceParameterDefinition',
                                    choices: ['execute','skip'].join('\n'),
                                    name: 'input',
                                    description: 'Select apply or destroy.']
                                ]
                            )

                            echo "The answer is: ${USER_INPUT}"

                            if( "${USER_INPUT}" == "destroy"){
                                //do something
                                sh 'echo terraform destroy -auto-approve -no-color'
                            } else {
                                //do something else
                                sh 'echo somethingelse'
                            }
                        }
                    }
                }
            }
        }
    }