pipeline {
    agent {
        docker {
            image 'hashicorp/terraform:light'
            args '-i --entrypoint='
        }
    }
    stages {
        stage('Test-3') {
            steps {
                script {
                    def whole_file_data = readFile(file: 'the-mop')
                    whole_file_data.split('\n').each { String line ->
                        println("line:${line}")
                    script {
                        // Define Variable
                        def USER_INPUT = input(
                            message: 'User input required - execute or destroy?',
                            parameters: [
                                [$class: 'ChoiceParameterDefinition',
                                choices: ['execute','destroy'].join('\n'),
                                name: 'input',
                                description: "execute or skip: [${line}]"
                            ]
                        )

                        echo "The answer is: ${USER_INPUT}"

                        if( "${USER_INPUT}" == "execute"){
                            //do something
                            sh '''
                            echo "Execute [$line]"
                            '''
                        } else {
                            //do something else
                            sh '''
                            echo "SKIP [$line]"
                            '''
                        }
                    }
                    }
                }
            }
        }
    }
}