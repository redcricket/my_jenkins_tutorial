pipeline {
    agent any
    stages {
        stage('Setup parameters') {
            steps {
                script {
                    properties([
                        parameters([
                            string( name: 'LOGFILE', trim: true ),
                        ])
                    ])
                }
            }
        }
        stage('Execute chklog.') {
            steps {
                script {
                    env.DEFAULT_LOCAL_TMP = env.WORKSPACE_TMP
                    env.HOME = env.WORKSPACE

                    sh """
                    echo "Log file is ${LOGFILE}."
                    grep FAIL ${LOGFILE}
                    """
                }
            }
        }
    }
}